<Window x:Class="WPF_regisztraciosLap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_regisztraciosLap"
        mc:Ignorable="d"
        Title="regisztracio" Height="300" Width="400">
    <Grid>
        <Label
            Content="Regisztrációs lap"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Height="auto"
            Width="auto"
            FontSize="20"
            FontWeight="Bold"
            />
        <TextBlock
            Text="Az ön neve: "
            Margin="20 60 0 0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Height="auto"
            Width="auto"
            FontSize="16"
            FontWeight="DemiBold"
            />
        <TextBox
            x:Name="tbx_nev"
            Text=""
            Margin="120 63 0 0"
            Height="20"
            Width="250"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="15"
            />

        <TextBlock
            Text="Az ön email címe: "
            Margin="20 100 0 0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Height="auto"
            Width="auto"
            FontSize="16"
            FontWeight="DemiBold"
            />
        <TextBox
            x:Name="tbx_emailcim"
            Text=""
            Margin="170 103 0 0"
            Height="20"
            Width="200"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="15"
            
            />

        <TextBlock
            Text="Az ön jelszója: "
            Margin="20 140 0 0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Height="auto"
            Width="auto"
            FontSize="16"
            FontWeight="DemiBold"
            />
        <TextBox
            x:Name="tbx_jelszo"
            Text=""
            Margin="140 143 0 0"
            Height="20"
            Width="230"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="15"
            
            />

        <Button
            x:Name="btn_regisztracio"
            Content="Regisztráció"
            Margin="0 200 0 0"
            Height="50"
            Width="200"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            FontWeight="Bold"
            FontSize="30"
            Foreground="Blue" Click="btn_regisztracio_Click"
            />

    </Grid>
</Window>
